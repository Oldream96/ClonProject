    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="editTextStyle">@style/EditTextWhite</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">13dp</item>
        <!-- Hides the status bar -->
    </style>


    <style name="btn_black">
        <item name="android:textColor">#FFFFFF</item>
        <item name="elevation">15dp</item>
    </style>

    <style name="EditTextWhite" parent="@android:style/Widget.EditText">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:background">@drawable/textbox</item>-->
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="SpinnerStyle2" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:background">@drawable/textbox</item>-->
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="SpinnerStyle" parent="@android:style/Widget.Spinner">

        <!--        <item name="android:background">@drawable/spinner_background</item>-->
    </style>


    <style name="AutoCompleteText" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:padding">10dp</item>
        <!--        <item name="android:background">@drawable/textbox</item>-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black_text</item>


        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>


    <style name="Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="ShowcaseButton">
        <item name="android:layout_width">wrap_content</item>
