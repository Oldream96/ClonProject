<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_local"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/tomafoto"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view"/>
    <TextView
        android:id="@+id/tvLocal"
        android:layout_width="0dp"
        android:text="Los Olivos"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TelÃ©fono: "
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/tvLocal"/>
    <TextView
        android:id="@+id/tvTelefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="76078879"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed-light"
        app:layout_constraintStart_toEndOf="@+id/lblTelefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocal"/>

    <TextView
        android:id="@+id/lblZona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zona: "
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/lblTelefono"
        app:layout_constraintBottom_toTopOf="@+id/view"/>
    <TextView
        android:id="@+id/tvZona"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lima Norte"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed-light"
        app:layout_constraintStart_toEndOf="@+id/lblZona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/tvTelefono"/>
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.02dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:background="@color/md_grey_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>